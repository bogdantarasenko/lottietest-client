{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "types": ["jest", "node"],
    "typeRoots": ["src/node_modules/@types", "src/types"],
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/components": ["src/components"],
      "@/lib/*": ["src/lib/*"],
      "@/lib": ["src/lib"],
      "@/public/*": ["public/*"],
      "@/public": ["public"],
      "@/styles/*": ["src/styles/*"],
      "@/styles": ["src/styles"],
      "@/services/*": ["src/services/*"],
      "@/services": ["src/services"],
      "@/types/*": ["src/types/*"],
      "@/types": ["src/types"],
      "@/test/*": ["test/*"],
      "@/test": ["test"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "generated/globalTypes.ts", "test/*"]
}
